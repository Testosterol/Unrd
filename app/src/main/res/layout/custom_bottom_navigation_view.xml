<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="#353B3B"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/image_button_action_bar_home"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:background="@drawable/ic_baseline_home_24"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="visible"
        android:layout_marginLeft="16dp" />

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/image_button_action_phone"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_local_phone_24"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="visible"/>

    <ImageButton
        android:id="@+id/image_button_action_messages"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_baseline_message_24"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"/>

    <Space
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1" />

    <ImageButton
        android:id="@+id/image_button_action_bar_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_baseline_message_24"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="visible"
        android:layout_marginRight="16dp" />
</LinearLayout>