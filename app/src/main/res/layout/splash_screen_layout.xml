<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_splash"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.github.florent37.shapeofview.shapes.ArcView
            android:id="@+id/arcLayout"
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:elevation="10dip"
            app:shape_arc_position="bottom"
            app:shape_arc_height="-50dp"
            >

            <com.flaviofaria.kenburnsview.KenBurnsView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/previewunrd"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </FrameLayout>

        </com.github.florent37.shapeofview.shapes.ArcView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arcLayout"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <TextView
                android:id="@+id/splash_screen_textview_subject1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="REAL TIME"
                android:textColor="#3A3A3A"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/splash_screen_textview_description1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:textAlignment="center"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:text="immersive crime, romance and horror stories with thousands of others."
                android:textColor="#979696"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/splash_screen_textview_subject2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif"
                android:text="GET READY TO ENTER IMMERSIVE WORLD"
                android:textColor="#3A3A3A"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/splash_screen_textview_description2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:text="Delve into each characterâ€™s phone and receive calls, read messages and watch videos for clues."
                android:textColor="#979696"
                android:textAlignment="center"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/enter_splash_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENTER"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/skip_intro_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="skip"
                android:layout_gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

    </RelativeLayout>



</ScrollView>